{{#if dogs.length}}
<div>
    <div class="dog-card-container dog-list flex-wrap">
        {{#each dogs as |dog|}}
        <div class="card dog-cards">
            <img class="card-img-top" src="{{pic_hyperlink}}" alt="Dog Profile icon">
            <div class="card-body d-flex flex-column justify-content-end">
                <h5 class="dog-name card-title">{{dog.name}}</h5>
                {{#if (format_age_years age) includeZero = false}}
                <p class="card-text">Hi! I am a {{format_age_years age}} year old {{gender}} {{breed}}.</p>
                {{else}}
                <p class="card-text">Hi! I am a {{format_age_months age}} month old {{gender}} {{breed}}.</p>
                {{/if}}
                <div class="buttons dog-buttons flex-row justify-content-between">
                    <a class="dog-anchor" style="text-decoration: none" href="profile/dog/{{dog.id}}">
                        <button class="edit-dog-btn btn-sm btn-danger"> Edit </button>
                    </a>
                    <button>
                        <img id="delete-dog-btn" class="delete-dog" data-id="{{dog.id}}"
                            src="/images/delete-Freepik-32px.png" alt="Trash Can">
                    </button>
                </div>

            </div>
        </div>
        {{/each}}
    </div>
</div>
{{/if}}